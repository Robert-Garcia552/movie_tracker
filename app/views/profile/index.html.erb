<div class="profile-mini-container">
  <%= image_tag("/assets/paramount.jpg", class: "profile-image") %>
  <div class="profile-header">
    <h1>Welcome <%= current_user.first_name %></h1>
    <div class="profile-stats" style="display: flex; justify-content: space-evenly;">
      <span class="stat">
        <p>Total Movies Tracked</p>
        <p><%= @profile_movies.count %></p>
      </span>
      <span class="stat">
        <p>Favorite Movies</p>
        <p><%= @favorite_movies.count %></p>
      </span>
       <span class="stat">
        <p>Watched Movies</p>
        <p><%= @watched_movies.count %></p>
      </span>
    </div>
  </div>
</div>
<% if @profile_movies.present? %>
  <% if @watched_movies.present? %>
    <div class="profile-header-container">
      <h2>Watched Movies</h2>
      <hr>
    </div>
    <div class="card-container">
      <% @watched_movies.each do | m | %>
        <%= render partial: '/shared/movie_card', locals: { m: m.movie, watched_movie: true, favorite: false, icons: true } %>
      <% end %>
    </div>
  <% end %>
  <% if @favorite_movies.present? %>
    <div class="profile-header-container">
      <h2>Favorite Movies</h2>
      <hr>
    </div>
    <div class="card-container">
      <% @favorite_movies.each do | m | %>
        <%= render partial: '/shared/movie_card', locals: { m: m.movie, watched_movie: true, favorite: true, icons: true } %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="reg-container text-center">
    <%= link_to "Find Some Movies", movies_path, class: "btn btn-primary" %>
  </div>
<% end %>
